{
    "name": "davidrjenni/lsif-php",
    "description": "Language Server Indexing Format (LSIF) generator for PHP",
    "license": "MIT",
    "keywords": [
        "lsif"
    ],
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "prefer-stable": true,
    "bin": [
        "bin/lsif-php"
    ],
    "autoload": {
        "psr-4": {
            "LsifPhp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "composer-runtime-api": "^2.2",
        "nikic/php-parser": "^4.13"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": "phpunit"
    }
}
